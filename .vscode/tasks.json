{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": {
				"runOn": "folderOpen",
			}
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "npm test",
			"group": "test",
			"problemMatcher": []
		}
	]
}
